{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "noEmit": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules", "packages"]
        },
        "jsx": "react"
    },
    "refrences": [{ "path": "./packages/core" }, { "path": "./packages/web" }]
}
